<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
  <h2 class="title mt-5">edit blog post</h2><hr>
  <form class="edit-blog-form">
    <div>
        <label for="blog-title">blog post title:</label>
      <input class="input" name="blog-title" type="text" value="{{blog.title}}" />
    </div>
    <div>
        <label for="blog-content">blog content:</label>
      <input class="textarea" name="blog-content" type="text" value="{{blog.blog_content}}" />
    </div>
    <div class="is-pulled-right">
       created by you on {{format_date blog.created_at}}
      |
      <a href="/blog/{{blog.id}}">{{blog.comments.length}} {{format_plural "comment" blog.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">save blog</button>
    <button type="button" class="button is-danger delete-blog-btn">delete blog</button>
  </form>
</article>

{{> comments blog.comments}}

<script src="/javascript/editBlog.js"></script>
<script src="/javascript/deleteBlog.js"></script>
<script src="/javascript/comment.js"></script>